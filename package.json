{
  "name": "employee-management",
  "version": "0.0.1",
  "description": "An employee management system",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "18 || 20 || 22"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run rebuild",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t employee-management .",
    "docker:run": "docker run -p 3000:3000 -d employee-management",
    "premigrate": "npm run build",
    "preopenapi-spec": "npm run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "prestart": "npm run rebuild",
    "start": "node -r source-map-support/register .",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
    "rebuild": "npm run clean && npm run build",
    "migrate": "ts-node ./src/migrate.ts"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Mehmet Okumu≈ü <okmssmemet@gmail.com>",
  "license": "",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^11.0.9",
    "@loopback/authorization": "^0.15.9",
    "@loopback/boot": "^7.0.9",
    "@loopback/core": "^6.1.6",
    "@loopback/repository": "^7.0.9",
    "@loopback/rest": "^14.0.9",
    "@loopback/rest-explorer": "^7.0.9",
    "@loopback/service-proxy": "^7.0.9",
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/morgan": "^1.9.9",
    "@types/winston": "^2.4.4",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "loopback-connector-postgresql": "^7.1.8",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "reflect-metadata": "^0.2.2",
    "ts-dotenv": "^0.9.1",
    "tslib": "^2.0.0",
    "undici": "^6.21.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@loopback/build": "^11.0.8",
    "@loopback/eslint-config": "^15.0.4",
    "@loopback/testlab": "^7.0.8",
    "@types/chai": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^16.18.119",
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.1",
    "eslint": "^8.57.0",
    "mocha": "^11.0.1",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.2"
  }
}
